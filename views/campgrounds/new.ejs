<%include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center">Create a new Campground</h1>
        <!--Don't do inline styling -->
        <div style="width: 30%; margin: 30px auto">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <label for="name">Campground name</label>
                    <input class="form-control" id="name" type="text" placeholder="Manzanita Post" name="name"></div>
                <div class="form-group">
                    <label for="price">Price per day</label>
                    <input class="form-control" id="price" type="number" placeholder="10.00" name="price" min="0.01" step="0.01"></div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" placeholder="Tall Trees, West Elizabeth">
                </div>
                <div class="form-group">
                    <label for="image">Image URL</label>
                    <input class="form-control" id="image" type="text" placeholder="http://www.imgur.com" name="image"></div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" id="description" type="text" placeholder="Solid trading post, etc etc." name="description"></div>
                <div class="form-group"><button class="btn btn-lg btn-primary btn-block">Submit</button></div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
<%include ../partials/footer%>